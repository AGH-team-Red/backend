{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "target": "es2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2022"],
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "libs/*": [
        "./src/libs/*"
      ],
      "middlewares/*": [
        "./src/middlewares/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ],
      "modules/*": [
        "./src/modules/*"
      ]
    }
  }
}
